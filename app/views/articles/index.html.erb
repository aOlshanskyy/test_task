<div class="container">
	<div class="row">
		<% @articles.each do |article|%>
			<div class="col-md-4">
	          <div class="card mb-4 shadow-sm">
	          	<%=image_tag article.image, style:"width: 100%; height: 225px;", class: "img-thumbnail"%>
	            <div class="card-body">
	              <p class="card-text"><h1 style="text-align: center;"><%=article.title%></h1></p>
	              <div class="d-flex justify-content-between align-items-center">
	                
	                <%= link_to article_path(article),  class:"btn btn-outline-success my-2 my-sm-0" do%><i class="fas fa-sign-out-alt"></i>View<%end%>
	                
	                <small class="text-muted"><%= article.created_at.to_date.strftime("%d %B, %Y")%></small>
	              </div>
	            </div>
	          </div>
	        </div>
        <%end%>
	</div>
</div>